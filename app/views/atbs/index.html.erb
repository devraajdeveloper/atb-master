<table class = "table">

<th>Encounter No</th><th>Patient Name</th><th>Admit Date</th><th>Discharge Date</th><th>Billed Amount</th>
<th>Balance Amount</th><th>Insurance Name</th><th>Allocation</th><th>Associate ID</th><th>Edit</th><th>Delete</th>

<% @atb.each do |atb| %>
    <tr>
       <td><%= atb.encounter_no %></td>
       <td><%= atb.patient_name %></td>
       <td><%= atb.admit_date %></td>
       <td><%= atb.discharge_date %></td>
       <td><%= atb.billed_amount %></td>
       <td><%= atb.balance_amount %></td>
       <td><%= atb.insurance_name %></td>
       <td><%= atb.user_allocation %></td>
       <td><%= atb.associate_id %></td>
       <td><%= link_to "Edit", edit_atb_path(atb), class: "btn btn-warning btn-sm" %></td>
       <td><%= link_to "Delete",atb_path(atb),  method: :delete, data: {confirm: "Are you sure"}, class: "btn btn-danger btn-sm" %></td> 
    </tr>
<% end %>

</table>