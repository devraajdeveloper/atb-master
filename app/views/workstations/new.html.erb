<div class = "container-fluid">
    <div class = "jumbotron">
        <h3> Working on Encounter </h3>
        <%= form_for @workstation do |f| %>
            <div class = "row">
                <div class = "col"> 
                    <%= f.label :"Encounter No" %> 
                    <%= f.text_field :"encounter_no", class: "form-control", :value => @atb.encounter_no, :readonly => true %>
                </div>
                 <div class = "col"> 
                    <%= f.label :"Patient Name" %> 
                    <%= f.text_field :"patient_name", class: "form-control", :value => @atb.patient_name, :readonly => true %>
                </div>
                 <div class = "col"> 
                    <%= f.label :"Admit Date" %> 
                    <%= f.text_field :"admit_date", class: "form-control", :value => @atb.admit_date, :readonly => true %>
                </div>
                 <div class = "col"> 
                    <%= f.label :"Discharge Date" %> 
                    <%= f.text_field :"discharge_date", class: "form-control", :value => @atb.discharge_date, :readonly => true %>
                </div>
            </div>
            <br/><br/>
             <div class = "row">
                
                <div class = "col"> 
                    <%= f.label :"Billed Amount" %> 
                    <%= f.text_field :"billed_amount", class: "form-control", :value => @atb.billed_amount, :readonly => true %>
                </div>
                 <div class = "col"> 
                    <%= f.label :"Balance Amount" %> 
                    <%= f.text_field :"balance_amount", class: "form-control", :value => @atb.balance_amount, :readonly => true %>
                </div>
                <div class = "col"> 
                    <%= f.label :"Insurance Name" %> 
                    <%= f.text_field :"insurance_name", class: "form-control", :value => @atb.insurance_name, :readonly => true %>
                </div>
                <div class = "col"> 
                    <%= f.label :"Allocation" %> 
                    <%= f.text_field :"user_allocation", class: "form-control", :value => @atb.user_allocation, :readonly => true %>
                </div>
            </div>
             <br/><br/>
             <div class = "row">
                 
                 <div class = "col-sm-3"> 
                    <%= f.label :"Associate ID" %> 
                    <%= f.text_field :"associate_id", class: "form-control", :value => @atb.associate_id, :readonly => true %>
                </div>
                <div class = "col"> 
                    <%= f.label :"Notes" %> 
                    <%= f.text_area :"notes", class: "form-control", rows: "5", :required => true %>
                </div>
                <div class = "col-sm-3"> 
                    <%= f.label :"Date" %> 
                    <%= f.text_field :"date", class: "form-control", :value => @date, :readonly => true %>
                </div>
            </div>
             <br/><br/>

             <div class = "row">
                 
                 <div class = "col-sm-3"> 
                    <%= f.label :"Status Code" %> 
                    <% status_array = Em.all.map { |em| [em.status] } %>
                    <%= f.select(:status_code, options_for_select(status_array.uniq), {},  {:class => "form-control", :required => true}  ) %>
                </div>
                <div class = "col"> 
                    <%= f.label :"Action Code" %> 
                     <% action_array = Em.all.map { |em| [em.action] } %>
                    <%= f.select(:action_code, options_for_select(action_array.uniq), {},  {:class => "form-control", :required => true}) %>
                </div>
                <div class = "col-sm-3"> 
                    <%= f.label :"RM Checked" %> 
                     <% rm_array = Em.all.map { |em| [em.rm_checked] } %>
                    <%= f.select(:rm_checked, options_for_select(rm_array.uniq), {},  {:class => "form-control", :required => true}  ) %>
                </div>
                <div class = "col-sm-3"> 
                    <%= f.label :"CPDI" %> 
                   <% cpdi_array = Em.all.map { |em| [em.rm_checked] } %>
                    <%= f.select(:cpdi, options_for_select(cpdi_array.uniq), {},  {:class => "form-control", :required => true}  ) %>
                </div>
            </div>
             <br/><br/>

               <div class = "row">
                 
                 <div class = "col-sm-3"> 
                    <%= f.label :"Clearing House" %> 
                     <% clearing_house_array = Em.all.map { |em| [em.clearing_house] } %>
                    <%= f.select(:clearing_house, options_for_select(clearing_house_array.uniq), {},  {:class => "form-control", :required => true}  ) %>
                </div>
                <div class = "col"> 
                    <%= f.label :"Website Checked" %> 
                    <% website_array = Em.all.map { |em| [em.website_checked] } %>
                    <%= f.select(:website_checked, options_for_select(website_array.uniq), {},  {:class => "form-control", :required => true}  ) %>
                </div>
                <div class = "col-sm-3"> 
                    <%= f.label :"Self Resolvable" %> 
                   <% sr_array = Em.all.map { |em| [em.self_resolvable] } %>
                    <%= f.select(:self_resolution, options_for_select(sr_array.uniq), {},  {:class => "form-control", :required => true}  ) %>
                </div>
                <div class = "col-sm-3"> 
                    <%= f.label :"Source of Resolution" %> 
                   <% sor_array = Em.all.map { |em| [em.source_of_resolution] } %>
                    <%= f.select(:source_of_resolution, options_for_select(sor_array.uniq), {},  {:class => "form-control", :required => true}  ) %>
                </div>
            </div>
             <br/><br/>

             <%= f.submit :"Done", class: "btn btn-primary" %>
        <% end %>
    </div>
